<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:mdc="nativescript-mdc">
    <GridLayout columns="*" rows="*, auto">
        <ScrollView row="0">
            <StackLayout>
                <mdc:CardView class="card" elevation="5" borderRadius="15" interactable="true">
                    <Label text="{{ message }}" class="text t-20 text-center c-black" textWrap="true"/>
                </mdc:CardView>
                <StackLayout>
                    <mdc:Ripple>
                        <Label text="Ripple" class="text t-20 text-center c-black" textWrap="true"/>
                    </mdc:Ripple>
                </StackLayout>
                <StackLayout>
                    <mdc:ActivityIndicator busy="true"></mdc:ActivityIndicator>
                    <mdc:Progress value="39"></mdc:Progress>
                    <mdc:Slider value="39"></mdc:Slider>
                </StackLayout>
                <StackLayout>
                    <mdc:Button text="default"></mdc:Button>
                    <mdc:Button variant="outline" text="outline"></mdc:Button>
                    <mdc:Button variant="flat" text="flat"></mdc:Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
        <mdc:BottomNavigation class="bottom-nav" loaded="loaded" row="1" titleVisibility="always">
            <mdc:BottomNavigationTab title="First" icon="ic_home" />
            <mdc:BottomNavigationTab title="Second" icon="ic_view_list" selectable="false" />
            <mdc:BottomNavigationTab title="Third" icon="ic_menu" />
            <mdc:BottomNavigationTab title="Forth" icon="ic_view_list" selectedIcon="ic_menu" />
        </mdc:BottomNavigation>
    </GridLayout>
</Page>
