<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:mdc="nativescript-mdc">
  <GridLayout columns="*" rows="*, auto">
    <StackLayout row="0">
      <mdc:Card class="card" elevation="5" radius="15" ripple="true">
        <Label text="{{ message }}" class="text t-20 text-center c-black" textWrap="true"/>
      </mdc:Card>
    </StackLayout>
      <mdc:BottomNavigation class="bottom-nav" loaded="loaded" row="1">
          <mdc:BottomNavigationTab title="First" icon="ic_home" />
          <mdc:BottomNavigationTab title="Second" icon="ic_view_list" selectable="false" />
          <mdc:BottomNavigationTab title="Third" icon="ic_menu" />
          <mdc:BottomNavigationTab title="Forth" icon="ic_view_list" selectedIcon="ic_menu" />
      </mdc:BottomNavigation>
  </GridLayout>
</Page>